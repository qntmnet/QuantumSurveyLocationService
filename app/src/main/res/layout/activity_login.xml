        <ScrollView

            android:id="@+id/scroll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="vertical"
            android:fillViewport="true" >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F3F2F7"
                android:orientation="vertical"
                android:weightSum="2">


                <RelativeLayout
                    android:layout_weight="1.2"
                    android:id="@+id/relativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F3F2F7"
                    >


                    <ImageView
                        android:layout_marginBottom="30dp"
                        android:id="@+id/img_logo"
                        android:layout_width="280dp"
                        android:layout_height="120dp"
                        android:layout_alignParentBottom="true"
                         android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/qsmp_theme_light" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_weight="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F3F2F7"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="-3dp"
                        android:background="#F3F2F7"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/ll_username_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_welcome_user"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="WelCome Naresh"
                                android:textColor="@color/black_opaque_90"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/txt_not_you"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="Not You?"
                                android:textColor="@color/black_opaque_50"
                                android:textSize="15dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_userid_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="8dp"


                                >

                                <EditText
                                    android:id="@+id/edt_username"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/edittext_outer_border"
                                    android:drawableLeft="@drawable/ic_person_black_24dp"
                                    android:drawablePadding="10.0dip"
                                    android:drawableTint="@color/primary"
                                    android:gravity="center_horizontal|left"
                                    android:hint="UserId"
                                    android:inputType="textEmailAddress"
                                    android:nextFocusForward="@+id/edt_password"
                                    android:text=""
                                    android:textColor="#000000" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_userid_next"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginRight="20dp"
                                android:background="@color/primary_dark"
                                android:text="Next"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="normal" />


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_password_login_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="8dp"
                                app:passwordToggleEnabled="true"
                                app:passwordToggleTint="@color/primary">

                                <EditText
                                    android:id="@+id/edt_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/edittext_outer_border"
                                    android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                                    android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                                    android:drawablePadding="10.0dip"
                                    android:drawableTint="@color/primary"
                                    android:hint="Password"
                                    android:imeOptions="actionDone"
                                    android:inputType="textPassword"
                                    android:text=""
                                    android:textColor="#000000"></EditText>

                            </com.google.android.material.textfield.TextInputLayout>


                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_login"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="40dp"
                                android:layout_marginRight="20dp"
                                android:background="@color/primary_dark"
                                android:text="Login"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="normal" />


                        </LinearLayout>


                        <TextView
                            android:id="@+id/txt_forgot_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="20dp"
                            android:gravity="right"
                            android:text="Forgot Password?"
                            android:textColor="@color/primary_dark"
                            android:textSize="15dp"
                            android:visibility="gone" />


                    </LinearLayout>

                </RelativeLayout>





            </LinearLayout>






        </ScrollView>







    </RelativeLayout>



</LinearLayout>